  {{#each this._embedded.events}}
  <li class='event-card' id={{id}}>
<div class="event-image__wrapper">
    <img class='event-image' src={{#with images}}{{[7].url}}{{/with}} alt='{{name}}'/>
</div>
<div class="event-content">
    <h3 class='event-title'>{{name}}</h3>
    <p class='event-date'>{{dates.start.localDate}}</p>
    <p class="event-place">
        <a href="https://maps.google.com?saddr=Current+Location&daddr={{_embedded.venues.0.location.latitude}},{{_embedded.venues.0.location.longitude}}" class="link" target="_blank"> <span class="material-icons md-12 cards-icons">room</span> {{#with _embedded.venues}}
        {{#if [0].name}}
        {{[0].name}}
        {{else}}
        Unknown place
        {{/if}}
        {{/with}}</a>
    </p>
</div>
  </li>
  {{/each}}